        link(rel="stylesheet", href="/css/styles.css") 
        style.
            table {
                width: 200px;
                border-collapse: collapse;
            }

            td {
                height: 50px;
                color: white;
                text-align: center;
                font-size: 1.5em;
            }

            tr:nth-child(1) { background-color: #00ffde; }
            tr:nth-child(2) { background-color: #3effe6; }
            tr:nth-child(3) { background-color: #67ffeb; }
            tr:nth-child(4) { background-color: #95fff1; }
            tr:nth-child(5) { background-color: #cbfff8; }
            tr:nth-child(6) { background-color: #eec7ff; }
            tr:nth-child(7) { background-color: #e6adff; }
            tr:nth-child(8) { background-color: #df95ff; }
            tr:nth-child(9) { background-color: #d167ff; }
            tr:nth-child(10) { background-color: #b100ff; }

            section {
                display: flex;
                justify-content: center;
                align-items: center;

            }    
                

